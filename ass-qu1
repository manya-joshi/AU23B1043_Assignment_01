def get_tshirt():
    user_name = input("Enter Your Name: ")
    brand_name = input("Enter the brand you are looking for: ")
    check_brand(user_name, brand_name)

def check_brand(user_name, brand_name):
    brand_list = ["A", "B", "C", "D", "E"]
    if brand_name in brand_list:
        print(f"Hi {user_name},\nThe brand you are looking for is available in our store.")
    else:
        print(f"Hi {user_name},\nUnfortunately the brand {brand_name} you are looking for is not available in our store!!")

get_tshirt()
